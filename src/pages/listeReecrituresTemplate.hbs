<!-- Liste filtrée des réécritures
  listeReecrituresTemplate.hbs
  -->


<div class="w3-container">
 
</div>
<div class="w3-container w3-padding-32">
<div class="w3-card-4 w3-light-gray" id="panneau_recherche" style="display: none">
	<div class="w3-container w3-green">
		  <h3>Chercher une réécriture</h3>
	</div>
	<div class="w3-container w3-padding-16">
	<form>
		<label class="w3-center w3-text-green">
		<i class="material-icons">search</i> Filtre :</label>
		<input class="w3-input w3-border w3-padding" type="text" 
		placeholder="Titre ou numéro..." 
	oninput="w3.filterHTML('#liste_des_reecritures', 'li', this.value)">
	</form>
	</div>
</div>

<div class="w3-container">
	<h3 class="w3-text-teal">Liste des réécritures</h3>
    <ul id="liste_des_reecritures" class="w3-bar-block w3-border w3-light-gray" 
    style="list-style-type: none; margin: 0; padding: 0">
	    {{#each inforeecriture}}
	    <li><a href="#!reecriture/{{this.id}}" class="w3-bar-item w3-button">
			    {{this.id}} : {{this.titre}} </a>
	    </li>
	    {{/each}}
    </ul>
</div>
</div>
