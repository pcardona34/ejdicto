 <!-- Navigation : Menu : menuExerciceTemplate.hbs -->

<!-- ============================================ -->

<!-- Sidebar -->
<div class="w3-sidebar w3-bar-block" style="display:none" id="menu_gauche">
  <button onclick="refermer_navigation()" class="w3-bar-item w3-button w3-large w3-text-teal">Fermer 
  <i class="icon-retourner w3-right"></i></button>
{{#each this.items}}
  <a href="{{lien}}" class="w3-bar-item w3-button w3-light-gray w3-border">
  {{{icone}}} {{legende}}</a>
  {{/each}}

</div>

<!-- Contexte -->
<div class="w3-{{couleur}}">
{{#with this.contexte}}
  {{#if bouton}}
    <button class="w3-button w3-{{couleur}} w3-xlarge" onclick="{{action}}">{{{icone}}}</button>
  {{else}}
    <a href="{{{action}}}" class="w3-button w3-{{couleur}} w3-xlarge">{{{icone}}}</a>
  {{/if}}
  
<!-- Actions -->
{{#each ../actions}}
  {{#if bouton}}
      <button onclick="{{lien}}/{{@root.did}}" class="w3-bar-item w3-button w3-{{couleur}} w3-right">{{{icone}}} {{legende}} 
      </button>
  {{else}}
      <a href="{{lien}}/{{@root.did}}" class="w3-bar-item w3-button w3-{{couleur}} w3-right">{{{icone}}} {{legende}}</a>
  {{/if}}
{{/each}}
  <div class="w3-container">
    <h1>{{titre}} de la {{../exercice}} {{../did}}
    	{{#if (cetteDicteeEstAmenagee ../exercice)}}
	    aménagée
	    {{/if}}
    </h1>
  </div>
</div>
{{/with}}
