{
  "name": "ejdicto",
  "version": "1.0.0",
  "description": "Version améliorée de jDicto",
  "main": "dist/app.js",
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "browserify src/main.js -t hbsfy -o dist/app.js",
    "minifycss": "cleancss -o docs/styles/ejdicto.min.css lib/styles/ejdicto.css",
    "minifycssvendor": "cleancss -o docs/styles/w3.min.css static/vendor/styles/w3.css",
    "minifycssicones": "cleancss -o docs/static/icones/style.min.css static/icones/style.css",
    "minifyjslib": "jsmin -o docs/scripts/ejdicto.min.js lib/scripts/ejdicto.js",
    "minifyjsvendor": "jsmin -o docs/scripts/w3.min.js static/vendor/scripts/w3.js",
    "minifyjsapp": "jsmin -o docs/scripts/app.min.js dist/app.js",
    "start": "budo src/main.js --live --serve dist/app.js -- -t hbsfy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pcardona34/ejdicto.git"
  },
  "keywords": [
    "dictée",
    "réécriture",
    "exerciseur"
  ],
  "author": "Patrick Cardona",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/pcardona34/ejdicto/issues"
  },
  "homepage": "https://github.com/pcardona34/ejdicto#readme",
  "dependencies": {
    "chibijs": "^3.0.9",
    "navigo": "^7.1.2"
  },
  "devDependencies": {
    "clean-css": "^4.2.3",
    "handlebars": "^4.7.6",
    "hbsfy": "^2.8.1",
    "jsmin": "^1.0.1"
  }
}
